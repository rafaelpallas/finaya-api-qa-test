    {
      "name": "GET - Post by ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "pm.test(\"Post ID matches environment variable\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.id).to.eql(Number(pm.environment.get(\"postId\")));\r",
              "});\r",
              "\r",
              "pm.test(\"Required fields are not null\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.userId).to.not.be.null;\r",
              "    pm.expect(jsonData.title).to.not.be.null;\r",
              "});\r",
              ""
            ],
