  "item": [
    {
      "name": "GET - List Posts",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "pm.test(\"Response is an array with 100 posts\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData).to.be.an(\"array\");\r",
              "    pm.expect(jsonData.length).to.eql(100);\r",
              "});\r",
              "\r",
              "pm.test(\"Posts have required fields\", function () {\r",
              "    const post = pm.response.json()[0];\r",
              "    pm.expect(post).to.have.property(\"userId\");\r",
              "    pm.expect(post).to.have.property(\"id\");\r",
              "    pm.expect(post).to.have.property(\"title\");\r",
              "    pm.expect(post).to.have.property(\"body\");\r",
              "});\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
